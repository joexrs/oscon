{
    "functions": {
      "source": "backend"
    },
    "hosting": {
        "site": "oscon",
        "public": "frontend",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "README.md",
            "FIREBASE.md"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(mp4|webm|ogg)",
                "headers": [
                    {
                        "key": "Cache-control",
                        "value": "max-age=604800"
                    }
                ]
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}