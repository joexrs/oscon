rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de videos
    match /videos/{videoId} {
      // Permitir lectura pública
      allow read: if true;
      
      // Permitir escritura solo de forma temporal (cambiar en producción)
      allow write: if true;
      
      // En producción, descomentar esto y usar autenticación:
      // allow write: if request.auth != null;
    }
    
    // Negar acceso a cualquier otra colección por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
